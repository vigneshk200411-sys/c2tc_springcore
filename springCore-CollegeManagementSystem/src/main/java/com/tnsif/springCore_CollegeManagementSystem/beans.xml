	    	</list>
	    </property> 
	</bean>		
	
	<bean id="college" class="com.tnsif.spring_DI.College">
		<property name="name" value="IFET" />
		<property name="departmentList">
			<list>
				<ref bean="dept1"/>
				<ref bean="dept2"/>
				<ref bean="dept3"/>
				<ref bean="dept4"/>
			</list>
		</property>
	</bean>
		
		
